<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name= "REST API QA Regression Suite" verbose="3">
<listeners>
<listener class-name="com.qa.gorestapi.listeners.ExtentReportListener" />
</listeners>

<test name="Create User Test">
		<classes>
			<class name="com.qa.gorestapi.tests.CreateUserTest" />
		</classes>
	</test>
	<test name="GET User Test">
		<classes>
			<class name="com.qa.gorestapi.tests.GetUserTest" />
		</classes>
	</test>
	 <test name="Patch User Test">
		<classes>
			<class name="com.qa.gorestapi.tests.PartialUserUpdateTest" />
		</classes>
		</test>
		<test name="DELETE User Test">
		<classes>
			<class name="com.qa.gorestapi.tests.DeleteUserTest" />
		</classes>
	</test>
</suite>

